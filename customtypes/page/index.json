{
  "id": "page",
  "label": "Page",
  "format": "page",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": { "config": { "label": "UID" }, "type": "UID" },
      "title": {
        "type": "Text",
        "config": {
          "label": "Title",
          "placeholder": "This is the title that appears in the tab"
        }
      },
      "menu": {
        "type": "Link",
        "config": { "label": "Menu", "select": "document" }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": { "landing_section": { "type": "SharedSlice" } }
        }
      }
    },
    "SEO & Metadata": {
      "metaTitle": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      },
      "metaDescription": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "metaImage": {
        "config": {
          "label": "Meta Image",
          "constraint": { "height": 1260, "width": 2400 },
          "thumbnails": []
        },
        "type": "Image"
      }
    }
  }
}
